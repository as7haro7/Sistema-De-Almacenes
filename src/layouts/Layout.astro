---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Sistema de Almacenes"
  : "Sistema de Almacenes - Gestión Eficiente de Inventarios";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="Sistema de Almacenes para la gestión eficiente de inventarios, facilitando el control y organización de productos."
      canonical={canonicalURL}
      twitter={{
        creator: "@as7haro7",
        site: "@as7haro7", // Cambia esto por tu usuario de Twitter
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Sistema de Almacenes - Gestión Eficiente de Inventarios`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Screenshot de la Página Principal del Sistema de Almacenes",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
